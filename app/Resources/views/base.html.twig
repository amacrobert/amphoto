<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
        <title>{% block title %}Andrew MacRobert Photography{% endblock %}</title>

        {% block ogp %}
            <meta property="og:type" content="website" />
            <meta property="og:title" content="{{ og.title|default('Andrew MacRobert Photography') }}" />
            <meta property="og:image" content="{{ og.image|default('http://andrewmacrobert.com/images/festivals/0001-1.JPG') }}" />
            <meta property="og:description" content="{{ og.description|default('Boston based photographer for hire. Nightlife, concerts, tours, fesivals, fashion, and weddings.') }}" />
            <meta property="fb:admins" content="1240771202">
        {% endblock %}

        {% block stylesheets %}
            <link href="{{ asset('bootstrap-3.3.6/css/bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{ asset('bootstrap-3.3.6/css/bootstrap-theme.min.css') }}" rel="stylesheet">
            <link href="{{ asset('css/main.css') }}" rel="stylesheet">
            <link href="{{ asset('lightbox2/css/lightbox.min.css') }}" rel="stylesheet">
            <link href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Raleway:500,600" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Ubuntu+Condensed" rel="stylesheet">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />
    </head>
    <body class="{{ bodyclass|default('') }}">
        <div class="container-fluid">
        {% block header %}
            <div class="row header" style>
                <div class="col-xs-12 col-sm-9"><h1><a href="/">Andrew MacRobert Photography</a></h1></div>
                <div class="col-xs-12 col-sm-3">
                    <ul class="social-list">
                        <li><a href="//facebook.com/andrewmacrobertphoto" target="_blank"><i class="ion ion-social-facebook"></i></a></li>
                        <li><a href="//instagram.com/dapperviking" target="_blank"><i class="ion ion-social-instagram"></i></a></li>
                        <li class="social-text">follow:</li>
                    </ul>
                </div>

                <div class="col-xs-12 navigation">
                    <ul>
                        <li><a href="/photos/nightlife">🎉 Nightlife</a></li>
                        <li><a href="/photos/day-parties">🍹 Day parties</a></li>
                        <li><a href="/photos/festivals">🎡 Festivals</a></li>
                        <li><a href="/photos/tour-life">🚌 Tour Life</a></li>
                        <li><a href="/photos/weddings">👰 Weddings</a></li>
                        <li><a href="/photos/portraiture">😎 Portraiture</a></li>
                        <li><a href="/about">/About</a></li>
                    </ul>
                </div>
            </div>

        {% endblock %}

        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('js/jquery-2.2.4.min.js') }}"></script>
            <script src="{{ asset('js/jquery.lazyload.min.js') }}"></script>
            <script src="{{ asset('bootstrap-3.3.6/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/freewall.js') }}"></script>
            <script src="{{ asset('lightbox2/js/lightbox.min.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>

            <!-- Google Analytics -->
            <script>
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

                ga('create', 'UA-80617528-1', 'auto');
                ga('send', 'pageview');
            </script>
        {% endblock %}
    </body>
</html>
