                        <li><a href="//instagram.com/dapperviking" target="_blank"><i class="ion ion-social-instagram"></i></a></li>
                        <li class="social-text">follow:</li>
                    </ul>
                </div>
            </div>

            <nav class="navbar navbar-inverse navbar-default navbar-fixed-top navbar-fixed-top-32">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li {% if nightlifeNavActive is defined %} class="active"{% endif %}>
                                <a href="/photos/nightlife">üéâ Nightlife</a>
                            </li>
                            <li {% if dayPartiesNavActive is defined %} class="active"{% endif %}>
                                <a href="/photos/day-parties">üçπ Day parties</a>
                            </li>
