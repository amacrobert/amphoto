<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
        <meta name="description" content="Boston based photographer for hire. Nightlife, concerts, tours, festivals, fashion, and weddings.">
        <title>{% block title %}Andrew MacRobert Photography{% endblock %}</title>

        {% block ogp %}
            <meta property="og:type" content="website" />
            <meta property="og:title" content="{{ og.title|default('Andrew MacRobert Photography') }}" />
            <meta property="og:image" content="{{ og.image|default('http://andrewmacrobert.com/images/nightlife-events/royale-go-001.jpg') }}" />
            <meta property="og:description" content="{{ og.description|default('Boston based photographer for hire. Nightlife, concerts, tours, fesivals, fashion, and weddings.') }}" />
            <meta property="fb:admins" content="1240771202">
        {% endblock %}

        {% block stylesheets %}
            <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{ asset('bootstrap/css/bootstrap-theme.min.css') }}" rel="stylesheet">
            <link href="{{ asset('css/main.css?v=2017-04-06') }}" rel="stylesheet">
            <link href="{{ asset('lightbox2/css/lightbox.min.css') }}" rel="stylesheet">
            <link rel="stylesheet" href="https://use.fontawesome.com/0c8c99d399.css">
            <link href="https://fonts.googleapis.com/css?family=Raleway:500,600" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Ubuntu+Condensed" rel="stylesheet">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />
    </head>
    <body class="{{ bodyclass|default('') }}">
        <div class="container-fluid">
        {% block header %}
            <div class="row header" style>
                <div class="col-xs-12">
                    <h1><a href="/">Andrew MacRobert Photo<span class="abridge">graphy</span></a></h1>
                    <ul class="social-list">
                        <li title="Facebook"><a href="//facebook.com/andrewmacrobertphoto" target="_blank"><i class="fa fa-facebook-square" aria-hidden="true"></i></a></li>
                        
                        <li title="Instagram"><a href="//instagram.com/dapperviking" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
            </div>

            <nav class="navbar navbar-inverse navbar-default navbar-fixed-top navbar-fixed-top-32">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">

                            <li {% if nightlifeNavActive is defined %} class="active"{% endif %}>
                                <a href="/photos/nightlife-events">üéâ Nightlife + Events</a>
                            </li>

                            <li {% if festivalsNavActive is defined %} class="active"{% endif %}>
                               <a href="/photos/festivals">üé° Festivals</a>
                            </li>

                            {% if tourLifeNavActive is defined %}<li class="active">
                                <a href="/photos/tour-life">üöå Tour Life</a>
                            </li>{% endif %}

                            <li {% if weddingsNavActive is defined %} class="active"{% endif %}>
                                <a href="/photos/weddings">üë∞ Weddings</a>
                            </li>

                            <li {% if portraitsWomenNavActive is defined or portraitsMenNavActive is defined%} class="active"{% endif %}>
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    üíÅ People <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li {% if portraitsWomenNavActive is defined %}class="active"{% endif %}>
                                        <a href="/photos/portraits-women">Women</a>
                                    </li>
                                    <li {% if portraitsMenNavActive is defined %}class="active"{% endif %}>
                                        <a href="/photos/portraits-men">Men</a>
                                    </li>
                                </ul>
                            </li>

                            <li class="{% if contactNavActive is defined %}active {% endif %}cta">
                                <a href="/contact">Book Now</a>
                            </li>

                            <li role="presentation" class="dropdown {% if moreNavActive is defined %}active{% endif %}">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    More <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li {% if aboutNavActive is defined %}class="active"{% endif %}>
                                        <a href="/about">About</a>
                                    </li>

                                    <li {% if videoNavActive is defined %} class="active"{% endif %}>
                                        <a href="/video">üé¨ Video</a>
                                    </li>                                    

                                    <li {% if equipmentNavActive is defined %}class="active"{% endif %}>
                                        <a href="/equipment">üéí Equipment</a>
                                    </li>
                                </ul>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}

        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('js/jquery-2.2.4.min.js') }}"></script>
            <script src="{{ asset('js/jquery.lazyload.min.js') }}"></script>
            <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/freewall.js') }}"></script>
            <script src="{{ asset('lightbox2/js/lightbox.min.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>


            <!-- Google Analytics -->
            <script>
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

                ga('create', 'UA-80617528-1', 'auto');
                ga('send', 'pageview');
            </script>
        {% endblock %}
    </body>
</html>
