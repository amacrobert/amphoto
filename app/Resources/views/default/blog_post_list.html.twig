{% if posts is defined %}
    {% for post in posts %}
        <div class="row">
            <a href="/blog/{{ post.post_id }}">
                <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 blog-teaser{% if loop.last %} last{% endif %}">
                    <div class="media">
                        <div class="media-left">
                            <img class="media-object" src="{{ post.post_thumbnail.thumbnail|default('') }}">
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">{{ post.post_title }}</h4>
                            <p class="date">{{ post.post_date.timestamp|date('F j, Y') }}</p>
                            <p>{{ post.post_excerpt|default('') }}</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
{% endif %}
