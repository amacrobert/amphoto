{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-xs-12 page-title">
            <h2>{{ title }}</h2>

            {% for endorsement in endorsements %}
            <div class="category-endorsement">
                <blockquote>{{ endorsement.quote }}"</blockquote>
                <div class="quote-author">&mdash; {{ endorsement.byline }}</div>
            </div>
            {% endfor %}

            <p>{{ description|raw }}</p>
        </div>
    </div>

    <div id="freewall">
        {% for photo in photos %}
            <a href="{{ asset(photo.uri) }}" data-lightbox="test-category" data-original="{{ asset(photo.uri) }}" class="lazy item {{ photo.orientation }}"></a>
        {% endfor %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $('.lazy').lazyload({
            effect: 'fadeIn',
            threshold: 600
        });
    </script>
{% endblock %}
